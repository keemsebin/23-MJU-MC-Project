<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    >
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/onboard_rectangle"
            android:padding="30dp"
            android:textSize="30sp"
            android:fontFamily="@font/pretendard_bold" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/onboradingimage"
            android:layout_gravity="right|end"
            android:layout_marginRight="20sp"
            android:layout_marginTop="20sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80sp"
                android:layout_marginBottom="20sp"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/inputimage" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textSize="19sp"
                    android:fontFamily="@font/pretendard_bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="20sp"

                    />
                <EditText
                    android:id="@+id/nickname"
                    android:layout_width="150sp"
                    android:layout_height="40sp"
                    android:layout_marginTop="4sp"
                    android:hint="@string/nicknamehint"
                    android:textColor="#949494"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="85sp"
                    android:maxLines="1"
                    android:ems="9"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/inputimage" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간설정"
                    android:textSize="19sp"
                    android:fontFamily="@font/pretendard_bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="20sp"

                    />
                <EditText
                    android:id="@+id/timer"
                    android:layout_width="150sp"
                    android:layout_height="40sp"
                    android:layout_marginTop="3sp"
                    android:textColor="#949494"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="95sp"
                    android:maxLines="1"
                    android:ems="9"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/inputimage2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 한마디"
                    android:textSize="19sp"
                    android:fontFamily="@font/pretendard_bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="20sp"

                    />
                <EditText
                    android:id="@+id/todayComment"
                    android:layout_width="210sp"
                    android:layout_height="40sp"
                    android:layout_marginTop="33sp"
                    android:textColor="#949494"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="20sp"
                    android:maxLines="1"
                    android:ems="9"/>
            </FrameLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/startBtn"
                android:layout_width="250sp"
                android:layout_height="40sp"
                android:textSize="17sp"
                android:fontFamily="@font/pretendard_bold"
                android:background="@drawable/button_custom"
                android:text="시작하기"
               />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>